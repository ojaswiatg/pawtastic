{
    "semi": true,
    "singleQuote": false,
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "trailingComma": "all",
    "plugins": [
        "eslint-plugin-prettier",
        "@trivago/prettier-plugin-sort-imports"
    ],

    "importOrder": ["^components/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
